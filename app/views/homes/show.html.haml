    .col-xs-6.col-sm-6.col-md-4.col-lg-4
      .panel.panel-danger
        .panel-heading
          = fa_icon("arrow-circle-left")
          = fa_icon("clock-o", :text => "Inbound Call Minutes")
        .panel-body
          %p
