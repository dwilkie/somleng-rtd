    .col-xs-6.col-sm-6.col-md-4.col-lg-4
      .panel.panel-info
        .panel-heading
          = fa_icon("arrow-circle-right")
          = fa_icon("clock-o", :text => "Outbound Call Minutes")
        .panel-body
          %p
            = pluralize(number_to_human(@real_time_data.calls_outbound_minutes), "Minute")

    .col-xs-6.col-sm-6.col-md-4.col-lg-4
      .panel.panel-success
